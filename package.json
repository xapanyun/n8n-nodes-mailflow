{
	"name": "n8n-nodes-mailflow",
	"version": "0.1.0",
	"description": "n8n community node for Mailflow - parse webhook emails and send notifications via Mailflow API",
	"license": "MIT",
	"homepage": "https://github.com/shwanShare/n8n-nodes-mailflow#readme",
	"keywords": [
		"n8n-community-node-package",
		"n8n",
		"mailflow",
		"email",
		"webhook",
		"notification"
	],
	"author": {
		"name": "shwanShare",
		"email": "248638543+shwanShare@users.noreply.github.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/shwanShare/n8n-nodes-mailflow.git"
	},
	"bugs": {
		"url": "https://github.com/shwanShare/n8n-nodes-mailflow/issues"
	},
	"scripts": {
		"build": "tsc && cp nodes/**/*.json dist/nodes/ 2>/dev/null || true",
		"build:watch": "tsc --watch",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"prepublishOnly": "npm run build"
	},
	"files": [
		"dist"
	],
	"n8n": {
		"n8nNodesApiVersion": 1,
		"credentials": [
			"dist/credentials/MailflowApi.credentials.js"
		],
		"nodes": [
			"dist/nodes/Mailflow/Mailflow.node.js"
		]
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"typescript": "^5.0.0"
	},
	"peerDependencies": {
		"n8n-workflow": "*"
	}
}
